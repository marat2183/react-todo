{
  "extends": [
    "react-app",
    "react-app/jest",
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "jsx-quotes": ["warn", "prefer-double"],
    "indent": ["error", 2],
    "semi": ["warn", "always"],
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
      "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}